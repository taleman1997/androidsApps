<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taleman.braintrainer.MainActivity">

    <Button
        android:id="@+id/brainTrainerGoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:onClick="Start"
        android:padding="30dp"
        android:text="GO"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="60dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brainTrainerTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_light"
        android:padding="10dp"
        android:text="30s"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brainTrainerScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_light"
        android:padding="10dp"
        android:text="0/0"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textColorLink="@color/colorAccent"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brainTrainerQuestionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="178dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="31+7"
        android:textAlignment="textStart"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/brainTrainerGoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brainTrainerTimeTextView">

        <Button
            android:id="@+id/brainTrainerAnswerButton0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_orange_light"
            android:onClick="ChooseAnswer"
            android:tag="0"
            android:text="14"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/brainTrainerAnswerButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@color/colorPrimary"
            android:onClick="ChooseAnswer"
            android:tag="1"
            android:text="14"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/brainTrainerAnswerButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_red_light"
            android:onClick="ChooseAnswer"
            android:tag="2"
            android:text="14"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/brainTrainerAnswerButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_purple"
            android:onClick="ChooseAnswer"
            android:tag="3"
            android:text="14"
            android:textSize="60sp"
            android:textStyle="bold" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
